<h2>Add an E-mail address</h2>

<form action='/emails' method='post'>
  <input id='id' name='id' type='hidden' value='<%= @contact.id() %>'>
  <div class="form-group">
    <label for="address">E-mail Address:</label>
    <input id="address" name="address" type="text" class="form-control">
  </div>
  <div class="form-group">
    <label for="type">Type:</label>
    <input id="type" name="type" type="text" class="form-control">
  </div>

  <button type="submit" class="btn-success">Submit</button>
</form>

<p><a href="/contact/<%= @contact.id() %>">Go back to contact page</a></p>
<p><a href="/all_contacts">Go back to all contacts</a></p>
<p><a href="/">Go home</a></p>
